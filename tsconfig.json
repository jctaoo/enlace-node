{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./declare",
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "paths": {
      "@enlace/*": ["lib/*"]
    }
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}